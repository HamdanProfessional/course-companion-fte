# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@host/database

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=course-content
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com

# JWT Security
# IMPORTANT: Generate a strong secret key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Application Settings
APP_NAME=Course Companion FTE
APP_VERSION=1.0.0
DEBUG=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Phase 2: LLM Configuration (Optional)
# =============================================================================
# Set to true to enable Phase 2 hybrid LLM features
# Default: false (Phase 1 Zero-LLM mode)
ENABLE_PHASE_2_LLM=false

# LLM Provider: openai or anthropic
LLM_PROVIDER=openai

# OpenAI Configuration (if LLM_PROVIDER=openai)
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (if LLM_PROVIDER=anthropic)
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# LLM Generation Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_TIMEOUT_SECONDS=30
